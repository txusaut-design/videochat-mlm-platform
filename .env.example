// .env.example
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=videochat_mlm
DB_USER=postgres
DB_PASSWORD=your_password
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Blockchain Configuration
POLYGON_RPC_URL=https://polygon-rpc.com
PLATFORM_PRIVATE_KEY=your-platform-wallet-private-key
PLATFORM_WALLET_ADDRESS=0xYourPlatformWalletAddress
USDC_CONTRACT_ADDRESS=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174

# MLM Configuration
MEMBERSHIP_PRICE_USDC=10.000000
MEMBERSHIP_DURATION_DAYS=28
MLM_LEVEL1_COMMISSION=3.500000
MLM_LEVEL2_COMMISSION=1.000000
MLM_LEVEL3_COMMISSION=1.000000
MLM_LEVEL4_COMMISSION=1.000000
MLM_LEVEL5_COMMISSION=1.000000

# Frontend URLs (comma-separated)
FRONTEND_URLS=http://localhost:3000,http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Email Configuration (optional)
EMAIL_FROM=noreply@yourdomain.com
EMAIL_HOST=smtp.yourdomain.com
EMAIL_PORT=587
EMAIL_USER=your-email-user
EMAIL_PASSWORD=your-email-password